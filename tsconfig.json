{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "rootDir": "./",
    "outDir": "./lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}